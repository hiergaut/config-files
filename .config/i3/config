#     output $screen_3
# }

set $void       #000000
set $activeEdge #FF8800
set $offEdge    #000000
set $offEdge2   #000000


for_window [class="^.*"] border pixel 1
new_window 1pixel

# window colors
# class						border		background	    text		indicator       child_border
client.focused				$void		$activeEdge	    $void       $activeEdge     $activeEdge
client.focused_inactive		$void		$void	        $void       $offEdge2	    $offEdge2
client.unfocused			$void		$void	        #FFFFFF     $offEdge	    $offEdge

# client.urgent				$border-color		$urgent-bg-color			$text-color						$indicator-color		#900000
# client.placeholder		#00FF00				#000000						#000000					#000000		#0C0C0C
# client.background			#ffffff
# client.background           #000000
# hide_edge_borders both

# exec always ~/bin/own_screen_wallpaper
# exec ~/bin/own_screen_displayPrimaryOnly
# exec ~/bin/own_screen_displayAll

exec_always feh --bg-fill --randomize ~/"$(cat ~/var/$(cat /etc/hostname)/wallpaper)"

exec ~/bin/own_screen_displayAll

#exec canberra-gtk-play -f /usr/share/sounds/freedesktop/stereo/service-login.oga

exec i3-msg workspace 1
exec i3-msg workspace 0
exec own_sound_play /usr/share/sounds/freedesktop/stereo/service-login.oga
